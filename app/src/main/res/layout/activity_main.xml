<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/topbar"
        android:padding="10dp">

            <!--<ImageView
                android:id="@+id/sidebarBtn"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="@drawable/hamburger"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="5dp"></ImageView>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/bungee_shade"
                android:includeFontPadding="false"
                android:padding="15dp"
                android:text="LUNTIAN"
                android:textColor="@color/dark_green"
                android:textSize="45sp"></TextView>




    </LinearLayout>


    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/sidebar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/humidityBtn"
                    android:layout_width="350dp"
                    android:layout_height="105dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_humidity"></ImageView>

                <ImageView
                    android:id="@+id/soilmoistureBtn"
                    android:layout_width="350dp"
                    android:layout_height="105dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_soilmoisture"></ImageView>

                <ImageView
                    android:id="@+id/plantgrowthBtn"
                    android:layout_width="350dp"
                    android:layout_height="105dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_plantgrowth"></ImageView>

                <ImageView
                    android:id="@+id/plancyclopediaBtn"
                    android:layout_width="350dp"
                    android:layout_height="105dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_plantcyclopedia"></ImageView>

                <ImageView
                    android:id="@+id/reminderBtn"
                    android:layout_width="350dp"
                    android:layout_height="105dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_reminder"></ImageView>

                <ImageView
                    android:id="@+id/plannerBtn"
                    android:layout_width="350dp"
                    android:layout_height="105dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/btn_planner"></ImageView>

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/sideNavView"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/dark_green"
            app:headerLayout="@layout/side_navbar">

        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>

</RelativeLayout>
