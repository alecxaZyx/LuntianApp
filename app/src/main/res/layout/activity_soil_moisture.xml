<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".soil_moisture">

    <!-- top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/topbar"
        android:padding="10dp">
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/bungee_shade"
            android:includeFontPadding="false"
            android:padding="15dp"
            android:text="LUNTIAN"
            android:textColor="@color/white"
            android:textSize="45sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sectionTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/textbg_rounded"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/fredoka_regular"
            android:padding="5dp"
            android:text="Soil Moisture Tracking"
            android:textColor="@color/white"
            android:textSize="25sp"></TextView>
    </LinearLayout>
    <ScrollView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sectionTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Soil Moisture Sensor 1"
                    android:fontFamily="@font/raleway_regular"
                    android:textSize="18sp"
                    android:layout_margin="10dp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textbg_rounded"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_regular"
                        android:padding="10dp"
                        android:text="Current Soil Moisture"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="70"
                            android:textColor="@color/white"
                            android:textSize="45sp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="%"
                            android:textColor="@color/white"
                            android:textSize="35sp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="VWC"
                            android:textColor="@color/white"
                            android:textSize="25sp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Water Sprinkler Status"
                        android:fontFamily="@font/raleway_regular"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchSprinkler1Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/darker_green"
                        android:textOff="OFF"
                        android:textOn="ON"
                        android:textSize="40sp"
                        android:thumb="@drawable/switch_thumb"
                        app:showText="true"
                        app:track="@drawable/switch_track"></androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Soil Moisture Sensor 2"
                    android:fontFamily="@font/raleway_regular"
                    android:textSize="18sp"
                    android:layout_margin="10dp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textbg_rounded"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_regular"
                        android:padding="10dp"
                        android:text="Current Soil Moisture"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="65"
                            android:textColor="@color/white"
                            android:textSize="45sp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="%"
                            android:textColor="@color/white"
                            android:textSize="35sp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="VWC"
                            android:textColor="@color/white"
                            android:textSize="25sp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Water Sprinkler Status"
                        android:fontFamily="@font/raleway_regular"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchSprinkler2Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/darker_green"
                        android:textOff="OFF"
                        android:textOn="ON"
                        android:textSize="40sp"
                        android:thumb="@drawable/switch_thumb"
                        app:showText="true"
                        app:track="@drawable/switch_track"></androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Soil Moisture Sensor 3"
                    android:fontFamily="@font/raleway_regular"
                    android:textSize="18sp"
                    android:layout_margin="10dp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textbg_rounded"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_regular"
                        android:padding="10dp"
                        android:text="Current Soil Moisture"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="72"
                            android:textColor="@color/white"
                            android:textSize="45sp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="%"
                            android:textColor="@color/white"
                            android:textSize="35sp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="VWC"
                            android:textColor="@color/white"
                            android:textSize="25sp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Water Sprinkler Status"
                        android:fontFamily="@font/raleway_regular"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchSprinkler3Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/darker_green"
                        android:textOff="OFF"
                        android:textOn="ON"
                        android:textSize="40sp"
                        android:thumb="@drawable/switch_thumb"
                        app:showText="true"
                        app:track="@drawable/switch_track"></androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Soil Moisture Sensor 4"
                    android:fontFamily="@font/raleway_regular"
                    android:textSize="18sp"
                    android:layout_margin="10dp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textbg_rounded"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_regular"
                        android:padding="10dp"
                        android:text="Current Soil Moisture"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="59"
                            android:textColor="@color/white"
                            android:textSize="45sp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="%"
                            android:textColor="@color/white"
                            android:textSize="35sp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:padding="5dp"
                            android:text="VWC"
                            android:textColor="@color/white"
                            android:textSize="25sp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Water Sprinkler Status"
                        android:fontFamily="@font/raleway_regular"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchSprinkler4Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/darker_green"
                        android:textOff="OFF"
                        android:textOn="ON"
                        android:textSize="40sp"
                        android:thumb="@drawable/switch_thumb"
                        app:showText="true"
                        app:track="@drawable/switch_track"></androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>